        <table>
            <thead>
                <tr>
                    <th class='label' ng-repeat='field in fields'>
                        {{ field }}
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-click='show(contact.first_name)' ng-repeat='contact in contacts | filter: query'>
                    <td ng-repeat='field in fields'> {{ contact[field] }} </td>
                </tr>
            </tbody>
        </table>